<%- include('header'); -%>

<div class="container"> 
            <div class="box" id="heading">
                <% if(week === "Sunday" || week === "Saturday"){%>
                    <h1 style="color: rgba(228, 203, 203, 0.371);"> Hey it's <%= listtitle %> <%= week %> Weekdend</h1>
                    <% }else{ %>
                    <h1 style="color: rgba(42, 2, 2, 0.46);"> Hey it's <%= listtitle %> <%= week %> Weekdays</h1>
                    <% } %>
            </div>
          
           <div class="box">
            <% list.forEach(function(listed){ %>

                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox1" value="<%=listed._id%>" onchange="this.form.submit()">
                        <p>  <%= listed.name %> </p>
                    </div>
                    <input type="hidden" name="listedname" value="<%= listtitle %>">
                </form>
           <% }); %>
          
            <form action="/" method="post">
                <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                <button type="submit" name="lists" value="<%= listtitle %>">+</button>
            </form>
        </div>
        </div>

<%- include('footer'); -%>
